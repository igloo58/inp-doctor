{
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.9",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "^9.3"
  },
  "scripts": {
    "lint:php": "./vendor/bin/phpcs -p -s --standard=WordPress --runtime-set testVersion 8.0- inp-doctor.php includes",
    "fix:php": "./vendor/bin/phpcbf -p --standard=WordPress inp-doctor.php includes"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
